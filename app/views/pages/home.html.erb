
<!-- Warming Up -->
<link href='//fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>

<!--Video Section-->
<section class="content-section video-section">
  <div class="pattern-overlay">
  <a id="bgndVideo" class="player" data-property="{videoURL:'https://www.youtube.com/watch?v=AKZSYhSRjdo',containment:'.video-section', quality:'large', autoPlay:true, mute:true, opacity:1}">bg</a>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
        <h1>We're not in Kansas anymore</h1>  
        <h3>Follow the yellow brick road and stay in unique places across the land</h3>
     </div>
      </div>
    </div>
  </div>

  <div class="home-search">
    <form>
      <ul class="search-inputs-list">
        <li>
          <div class="home-search-input-wrap"></div>
        </li>
        <li> 
          <input id="checkin" type="text" class="datepicker hidden-xs hasDatepicker" name="reservation[start_date]" value="" placeholder="Check In">
        </li>
        <li>
          <input id="checkout" type="text" class="datepicker hidden-xs hasDatepicker" name="reservation[end_date]" value="" placeholder="Check Out">
        </li>
        <li>
          <select name="reservation[guests]" id="guestcount" placeholder="Guests" class="hidden-xs">
      
            <option value="1">1 Guest</option>
          
            <option value="2">2 Guests</option>
          
            <option value="3">3 Guests</option>
          
            <option value="4">4 Guests</option>
          
            <option value="5">5 Guests</option>
          
            <option value="6">6 Guests</option>
          
            <option value="7">7 Guests</option>
          
            <option value="8">8 Guests</option>
          
            <option value="9">9 Guests</option>
          
            <option value="10">10 Guests</option>
          
            <option value="11">11 Guests</option>
          
            <option value="12">12 Guests</option>
      </select>
        </li>
        <li>
          <button class="btn btn-primary btn-large">Search</button>
          </li>
        </ul>
      </form>
    </div>
  </div>


</section>


<div class="dark-body">
  <div class="container">
    <h2>Stay for an eternity</h2>
  </div>

  <div class="row">
    <% @listings.each_slice(3) do |trio| %>
      <div class="row">
        <% trio.each do |listing| %>
        <div class="col-md-4 col-sm-12">
          <a href="<%= listing_path(listing) %>">
          <div class="discover-item" style="background-image: url(<%= listing.hero_picture %>)">
            <h2><%= listing.description %></h2>
          </div>
          </a>
        </div>
        <% end %>
      </div>
     <div class="row">
      <div class="col-md-12">
        <p></p>
      </div>
    </div>
    <% end %>
  </div>

